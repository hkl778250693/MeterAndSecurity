<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root_linearlayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:background="@color/white_transparent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@mipmap/window_bg"
        android:paddingTop="4dp"
        android:scrollbarThumbVertical="@color/text_blue"
        android:scrollbarStyle="insideInset"
        android:scrollbarSize="2dp">
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/home_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/meter_settings_first_one_selector"
                android:gravity="center"
                android:padding="8dp"
                android:text="首页安检"
                android:textColor="@color/text_black"
                android:textSize="12sp"/>
            <View
                android:layout_width="110dp"
                android:layout_height="0.5dp"
                android:background="@color/gray_thin" />
            <TextView
                android:id="@+id/continue_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/meter_settings_first_one_selector"
                android:gravity="center"
                android:padding="8dp"
                android:text="继续安检"
                android:textColor="@color/text_black"
                android:textSize="12sp"/>
            <View
                android:layout_width="110dp"
                android:layout_height="0.5dp"
                android:background="@color/gray_thin" />

            <TextView
                android:id="@+id/undone_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/meter_settings_layout_selector"
                android:gravity="center"
                android:padding="8dp"
                android:text="未安检"
                android:textColor="@color/text_black"
                android:textSize="12sp" />

            <View
                android:layout_width="110dp"
                android:layout_height="0.5dp"
                android:background="@color/gray_thin" />

            <TextView
                android:id="@+id/have_done_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/meter_settings_layout_selector"
                android:gravity="center"
                android:text="已安检"
                android:textColor="@color/text_black"
                android:textSize="12sp"
                android:padding="8dp"/>
            <View
                android:layout_width="110dp"
                android:layout_height="0.5dp"
                android:background="@color/gray_thin" />

            <TextView
                android:id="@+id/have_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/meter_settings_layout_selector"
                android:gravity="center"
                android:padding="8dp"
                android:text="已上传"
                android:textColor="@color/text_black"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
